	<!-- 회원상세정보 입력/수정/조회 -->
	<insert id="insertUserDetail" parameterType="com.pineapple.user.service.UserDetail">
		INSERT INTO userdetail
				(userDetailId, phoneFront3, phoneRest8, postalCode, address, nameCheck)
		VALUES  (#{userDetailId}, #{phoneFront3}, #{phoneRest8}, #{postalCode}, #{address}, #{nameCheck})
	</insert>
	 
	<update id="updateUserDetailById" parameterType="String">
		UPDATE userdetail
 		SET
 			userDetailId=#{userDetailId},
  			phoneFront3=#{phoneFront3},
  			phoneRest8=#{phoneRest8},
  			postalCode=#{postalCode},
  			address=#{address},
  			nameCheck=#{nameCheck}
